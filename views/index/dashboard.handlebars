<div class="container">
  <h1>Welcome {{user.firstName}}</h1>
  <h4>Your Quotes</h4>
  {{#if quotes}}
    <table class="striped">
      <thead>
        <tr>
          <th>Author</th>
          <th>Date</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each quotes}}
          <tr>
            <td><a href="/quotes/show/{{id}}">{{author}}</a></td>
            <td>{{formatDate dateCreated 'MMMM Do YYYY'}}</td>
            <td>{{status}}</td>
            <td><a class="btn left-align" href="/quotes/edit/{{id}}"><i class="material-icons left">edit</i>Edit</a>
            
            <form action="/quotes/{{id}}?_method=DELETE" method="post" id="delete-form">
            <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red"><i class="material-icons left">thumb_down</i>Delete</button>
            </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>You have not published any quotes yet</p>
  {{/if}}
</div>