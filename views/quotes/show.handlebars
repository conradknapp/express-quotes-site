<div class="quotes-light-gray container">
  <div class="row">
    <div class="col s12 m8">
      <div class="card story">
        <div class="card-content">
          <h3 style="font-weight: 100;">"{{{quote.text}}}"</h3>
          <small>{{{editIcon quote.user.id user.id quote.id false}}}</small>
        </div>
      </div>
      
    <div class="user-info">
        <p>Shared by <a href="/quotes/user/{{quote.user.id}}">{{quote.user.firstName}} {{quote.user.lastName}}</a>
        </p>
      </div>
  
      {{#if quote.allowComments}}
        <div class="card">
          <div class="card-content">
            <span class="card-title">Comments</span>
            {{#if user}}
              <form action="/quotes/comment/{{quote.id}}" method="post">
                <div class="input-field">
                  <textarea name="commentBody" class="materialize-textarea"></textarea>
                  <label>Add Comment</label>
                </div>
                <input type="submit" value="Submit" class="btn">
              </form>
            {{else}}
              <p>Please <a href="/auth/google">log in</a> to add comments</p>
            {{/if}}
          </div>
        </div>
        
        {{#each quote.comments}}
          <div class="card">
            <div class="card-content">
              <h5>{{commentBody}}</h5>
              <div class="chip">
                <img src="{{commentUser.image}}">
                {{commentUser.firstName}} {{commentUser.lastName}}
              </div>
              <br>
              <small>Posted: {{formatDate commentData 'MMMM Do YYYY'}}</small>
            </div>
          </div>
        {{/each}}
      {{/if}}
  
  
    </div>
  
    <div class="col s12 m4">
      <div class="card center-align">
        <div class="card-content">
          <span class="card-title">{{quote.author}}</span>
          <img src="{{quote.authorImage}}" class="circle responsive-img" alt="">
        </div>
        <div class="card-action">
           <a class="blue-text" href="/quotes/author/{{quote.author}}">More Quotes from {{quote.author}}</a>
        </div>
      </div>
    </div>
  </div>
</div>